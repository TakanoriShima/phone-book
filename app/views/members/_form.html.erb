<style>
    table, tr{
        border: solid 1px;
        margin: 0 auto;
    }
    th, td{
        border: solid 1px;
        padding: 5px;
        text-align: center;
        width: 15%;
        margin: 0 auto;
    }
    h1{
        width: 100%;
        color: red;
        text-align: center;
        
    }
</style>
<% 
  if session[:flag] === 1
    @message = '新規登録'
  elsif session[:flag] === 3
    @message = '更新'
  end
%>
<%= form_for @member do |f| %>
    <table>
        <tr>
            <td>
                <%= f.label :name, "名前" %>
            </td>
            <td>
                <%= f.text_field :name %>
            </td>
        </tr>
        <tr>
            <td>
                <%= f.label :yomi, "読み仮名" %>
            </td>
            <td>
                <%= f.text_field :yomi %>
            </td>
        </tr>
        <tr>
            <td>
                <%= f.label :phone, "電話番号" %>
            </td>
            <td>
                <%= f.text_field :phone, placeholder:'xxx-xxxx-xxxx' %>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <%= f.submit "#{@message}" %>
            </td>
        </tr>
    </table>
<% end %>
